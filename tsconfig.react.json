{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/react",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false
  },
  "include": ["src", "src/styles/tailwind.css"],
  "exclude": ["node_modules"]
}
